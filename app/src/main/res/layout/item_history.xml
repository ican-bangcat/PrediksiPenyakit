<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <!-- Status Indicator Bar -->
        <View
            android:id="@+id/viewIndicator"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="#4CAF50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Status Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badgeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewIndicator">

            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— Sehat"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Date & Time -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Jan 2024, 14:30"
            android:textSize="11sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/viewIndicator"
            app:layout_constraintTop_toBottomOf="@id/badgeStatus"/>

        <!-- Main Status Text -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kondisi Sehat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/viewIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate"/>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/viewIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"/>

        <!-- Health Metrics Container -->
        <LinearLayout
            android:id="@+id/metricsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/viewIndicator"
            app:layout_constraintEnd_toStartOf="@id/ivArrow"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Blood Pressure -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_blood_pressure"
                    android:tint="#E91E63"
                    android:contentDescription="Blood Pressure"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tensi"
                    android:textSize="9sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tvBP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120/80"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="6dp"/>

            <!-- BMI -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_bmi"
                    android:tint="#FF9800"
                    android:contentDescription="BMI"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textSize="9sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tvBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.5"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="6dp"/>

            <!-- Heart Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_heart_rate"
                    android:tint="#F44336"
                    android:contentDescription="Heart Rate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jantung"
                    android:textSize="9sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tvHeartRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- View Details Arrow -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="View Details"
            android:src="@drawable/ic_chevron_right"
            android:tint="#BDBDBD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.481" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>